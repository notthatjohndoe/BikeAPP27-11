@model IEnumerable<BikeApp.Models.Bike>

@{
    ViewBag.Title = "Available Bikes";
}

<h2>Bikes</h2>
<form asp-controller="Bikes" asp-action="AvailableBikes">
    <p>
        Model: <input type="text" name="SearchString">
        <input type="submit" value="Search" />
    </p>
</form>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Bike_Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.Status.Contains("A"))
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Bike_Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>@Html.ActionLink("Hire", "Hire", "Bikes", new { id = item.Bike_Id }, null)</td>
        </tr>
            }
        }

</table>


